extends layout

block messages
  header
    h1 Messages
    button.new
      a(href="/new") Post new message
  main
    each message in messageList
      div.message(style=`top:${message.position.top}; left:${message.position.left}; background-color:${message.color.backgroundColor}; color:${message.color.fontColor}` draggable="true")
        p.text= message.text 
        p.details #[b #{message.author}] - #{message.date.toLocaleString('en-GB', { dateStyle: 'full', timeStyle: 'short' })}
  script(src="/javascripts/drag.js")